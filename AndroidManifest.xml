<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oot.twitter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Twitter"
            android:label="@string/title_activity_twitter" >
        </activity>
        <activity android:name=".SignUp" >
        </activity>
        <activity android:name=".SignIn" >
        </activity>
        <activity
            android:name=".NewTweetDialog"
            android:theme="@style/NewTweetDialog"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name=".Tweets" >
        </activity>
        <activity android:name=".Following" >
        </activity>
        <activity android:name=".OtherPersonProfile" >
        </activity>
        <activity android:name=".OtherPersonFollowing" >
        </activity>
        <activity android:name=".EditProfile" >
        </activity>
        <activity android:name=".TweetInfo" >
        </activity>
        <activity android:name=".UsersList" >
        </activity>
        <activity android:name=".AutoLogin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartActivity" >
        </activity>
        <activity
            android:name=".SuggestedUser"
            android:label="@string/title_activity_suggested_user"
            android:theme="@android:style/Theme.Dialog"
            >
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

</manifest>
