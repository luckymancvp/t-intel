<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/root"
    >
    <include layout="@layout/activity_suggested_user"/>
    <LinearLayout
        android:id="@+id/tweet_screen"
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" 
	    android:background="@drawable/new_tweet_dialog_bg"
        >    
	    <LinearLayout 
	     	android:layout_width="fill_parent"
	     	android:layout_height="40dp"
	     	android:orientation="horizontal"
	     	android:layout_marginTop="5dp"
	     	android:layout_marginLeft="5dp"
	     	android:layout_marginRight="5dp" 
	    >
			<Button
			    android:id="@+id/btnCancelNewTweet" 
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:text="@string/btnCancelTweet"
				android:textColor="#000000"
				android:textStyle="bold"			
	    		android:background="@drawable/button_bg_default"
			/>
			<LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="0.4"
			>
			</LinearLayout>
			<TextView
			    android:id="@+id/character_left" 
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.1"
				android:gravity="center|left"
				android:text="140"
				android:textColor="#9A9C9A"
				android:textStyle="bold"
				    
			/>
			<Button 
				android:id="@+id/btnTweet"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:text="@string/btnTweet"   
				android:textColor="#ACAAAC"
				android:textStyle="bold"
				android:background="@drawable/button_bg_disabled" 
			/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:background="@drawable/listviewframe"
	     	android:layout_marginTop="5dp"
	     	android:layout_marginLeft="5dp"
	     	android:layout_marginRight="5dp"         
	    >
			<LinearLayout
	        	android:layout_width="fill_parent"
	       		android:layout_height="40dp"
	       	 	android:orientation="horizontal"
	    	>
	    		<ImageView 
	    			android:id="@+id/new_tweet_avarta"
	    			android:layout_width="0dp"
	    			android:layout_height="fill_parent"
	    			android:layout_weight="0.2"    
	    		/>
	    		<TextView 
	    		    android:id="@+id/new_tweet_username"
	    			android:layout_width="0dp"
	    			android:layout_height="fill_parent"
	    			android:layout_weight="0.8"
	    			android:gravity="left|center"
	    			android:text="tqnst"
	    			android:textColor="#000000"
	    			android:textStyle="bold"    
	    			
	    		/>
	    	</LinearLayout>
	    	<View 
	    		android:layout_width="fill_parent"
	    		android:layout_height="1dp"
	    		android:background="#E7E7E7"   
	    	/>
	    			    		
				<AutoCompleteTextView
			    	android:id="@+id/tweet_content"
	        		android:layout_width="fill_parent"
	       			android:layout_height="0dp"
	       			android:layout_weight="1"
	       			android:gravity="top|left"
	       	 		android:imeOptions="actionSend|flagNoEnterAction"
	       	 		android:maxLength="140"
	    		>
	    		</AutoCompleteTextView>   
	 	    	   	
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
	     	android:layout_marginTop="5dp"
	     	android:layout_marginLeft="5dp"
	     	android:layout_marginRight="5dp" 
	     	android:layout_marginBottom="5dp"      
	    >
			<ImageButton
			    android:id="@+id/btnAddImageFromCamera" 
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:background="@drawable/button_bg_default"
				android:src="@drawable/ic_dialog_camera_default"
				
				
			/>
			<ImageButton 
			    android:id="@+id/btnAddImageFromPhone"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:layout_marginLeft="10dp"
				android:background="@drawable/button_bg_default"
				android:src="@drawable/ic_dialog_photo_default"
			/>
			<ImageButton 
				android:id="@+id/btnAddMention"	
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:layout_marginLeft="10dp"
				android:background="@drawable/button_bg_default"
				android:src="@drawable/ic_dialog_at_default"
			/>
			<ImageButton 
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.25"
				android:layout_marginLeft="10dp"
				android:background="@drawable/button_bg_default"
				android:src="@drawable/ic_dialog_geo_default"
			/>						
	    </LinearLayout>
	</LinearLayout>
</FrameLayout>